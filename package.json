{
  "name": "uncodr-ng",
  "author": "UnCodr",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/uncodr/uncodr-ng"
  },
  "scripts": {
    "tsc": "tsc -p unc.app/tsconfig.json",
    "browserify": "browserify -s main unc.app/dist/main.js > unc.app/assets/bundle.js",
    "clean": "rm -rf unc.app/dist",
    "build": "npm run tsc && npm run browserify && npm run clean",
    "watch": "chokidar 'unc.app/src/**/*' -c \"npm run build\"",
    "start": "npm run build && npm run watch",

    "rollup": "rollup -f iife -c unc.app/conf/rollup.config.js -o unc.app/assets/bundle.rollup.js",
    "mv": "mv unc.app/assets/bundle.rollup.js unc.app/assets/bundle.js",
    "minify": "uglifyjs unc.app/assets/bundle.js --screw-ie8 --compress --mangle --output unc.app/assets/bundle.min.js",
    "build:p": "npm run tsc && npm run rollup && npm run mv && npm run minify && npm run clean",

    "tsc:ps": "tsc -p unc.app/conf/tsconfig.es2015.json",
    "es5": "tsc --target es5 --allowJs unc.app/assets/bundle.rollup.js --out unc.app/assets/bundle.js",
    "build:ps": "npm run tsc:ps && npm run rollup && npm run es5 && npm run minify && npm run clean",

    "clean:factory": "rm -rf unc.app/src/*.ngfactory.ts",
    "clean:compiled": "cd compiled && find . ! -name 'main-prod.ts' -type f -exec rm -f {} + && cd ..",
    "clean:ngc": "npm run clean && npm run clean:factory && npm run clean:compiled",
    "ngc": "ngc -p unc.app/conf/tsconfig.ngc.json",
    "tsc:ngc": "tsc -p unc.app/conf/tsconfig.ngc.json",
    "build:ngc": "npm run ngc && npm run tsc:ngc && npm run rollup && npm run es5 && npm run minify && npm run clean:ngc"
  },
  "license": "ISC",
  "dependencies": {
    "@angular/animations": "^5.2.2",
    "@angular/common": "^5.2.2",
    "@angular/compiler": "^5.2.2",
    "@angular/core": "^5.2.2",
    "@angular/forms": "^5.2.2",
    "@angular/platform-browser": "^5.2.2",
    "@angular/platform-browser-dynamic": "^5.2.2",
    "@angular/router": "^5.2.2",
    "@types/mathjax": "0.0.32",
    "angular-calendar": "^0.23.6",
    "core-js": "^2.5.7",
    "google-libphonenumber": "^3.1.12",
    "ng-pick-datetime": "^5.2.6",
    "ng2-sticky-kit": "^5.3.0",
    "ng2-toastr": "^4.1.2",
    "ngx-international-phone-number": "^0.1.3",
    "ngx-nestable": "^0.9.1",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^5.2.2",
    "videogular2": "^5.6.2",
    "zone.js": "^0.8.14"
  },
  "devDependencies": {
    "@types/core-js": "^0.9.34",
    "@types/node": "^8.0.30",
    "browserify": "^13.0.1",
    "chokidar-cli": "^1.2.0",
    "ngc": "^1.0.0",
    "rollup": "^0.55.5",
    "rollup-plugin-alias": "^1.4.0",
    "rollup-plugin-commonjs": "8.2.4",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-typescript": "^1.0.0",
    "rxjs-es": "^5.0.0-beta.12",
    "typescript": "2.4.0",
    "uglify-js": "^2.4.10"
  }
}
